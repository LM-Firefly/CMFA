<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="state"
            type="com.github.kr328.clash.design.component.ProxyViewState" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@{state.config.proxyLine == 1 ? @dimen/dp_0 : @dimen/proxy_layout_padding}"
        android:layout_marginVertical="@{state.config.proxyLine == 1 ? @dimen/dp_0 : @dimen/proxy_layout_padding}"
        app:cardCornerRadius="@{state.config.proxyLine == 1 ? @dimen/dp_0 : @dimen/proxy_card_radius}"
        app:cardElevation="@{state.config.proxyLine == 1 ? @dimen/dp_0 : @dimen/proxy_card_offset}"
        app:cardBackgroundColor="@{state.background}"
        app:strokeWidth="0dp"
        app:rippleColor="?attr/colorControlHighlight">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/proxy_card_min_height"
            android:paddingHorizontal="@{state.config.contentPadding}">
            <TextView
                android:id="@+id/title_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{state.title}"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@{state.controls}"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBottom_toTopOf="@+id/subtitle_view"
                app:layout_constraintEnd_toStartOf="@+id/delay_view"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />
            <TextView
                android:id="@+id/subtitle_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@{state.config.textMargin}"
                android:text="@{state.subtitle}"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="@{state.controls}"
                android:alpha="0.8"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/delay_view"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_view" />
            <TextView
                android:id="@+id/delay_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{state.delayText}"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="@{state.controls}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- 收藏/置顶角标 -->
        <TextView
            android:id="@+id/pinned_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:text="&#x1F4CC;"
            android:textSize="18sp"
            android:visibility="@{state.pinned ? View.VISIBLE : View.GONE}" />
    </com.google.android.material.card.MaterialCardView>
</layout>
