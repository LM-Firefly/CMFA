<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:text="@string/filter"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:textColor="?android:textColorSecondary"/>
        <LinearLayout
            android:id="@+id/filter_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:minHeight="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/not_selectable"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/filter_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:text="@string/mode"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:textColor="?android:textColorSecondary"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:clipToPadding="false"
            android:scrollbars="none">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/mode_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">
                <com.google.android.material.chip.Chip
                    android:id="@+id/mode_default"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dont_modify" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/mode_direct"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/direct_mode" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/mode_global"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/global_mode" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/mode_rule"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rule_mode" />
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:text="@string/layout"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:textColor="?android:textColorSecondary"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:clipToPadding="false"
            android:scrollbars="none">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/layout_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">
                <com.google.android.material.chip.Chip
                    android:id="@+id/layout_single"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/single" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/layout_double"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/doubles" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/layout_multiple"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/multiple" />
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:text="@string/sort"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:textColor="?android:textColorSecondary"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:clipToPadding="false"
            android:scrollbars="none">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/sort_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">
                <com.google.android.material.chip.Chip
                    android:id="@+id/sort_default"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/sort_name"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/sort_delay"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delay" />
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
    </LinearLayout>
</layout>